<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:gravity="center"
    tools:context=".MainActivity">

   <Button
       android:layout_width="wrap_content"
       android:id="@+id/bt_simple_maps"
       android:layout_height="wrap_content"
       android:text="Simple maps" />

   <Button
       android:id="@+id/bt_map_db"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="Maps DB" />

   <Button
       android:layout_width="wrap_content"
       android:id="@+id/bt_orther_maps"
       android:layout_height="wrap_content"
       android:text="Orther maps" />

   <Button
       android:id="@+id/bt_location_maps"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="Location maps" />

</LinearLayout>